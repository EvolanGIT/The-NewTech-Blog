{{#each posts as |post| }}
<section class="container mt-5">
        <div class="card mb-3">
                    <h1 class="card-header align-items-center d-flex justify-content-between">
                    {{post.user.user_name}} posted:
                    <div>
                        <img src="/assets/images/Beep-Post.jpg" width="100px">
                    </div>
                    </h1>
            <div class="card-body">
                    <h5 class="card-title">{{post_title}}</h5>
                    <h6 class="card-text mt-3">{{post}}</h6>
                <div class="d-flex justify-content-end">
                    <a href="#" class="btn mx-1 btn-primary">Like</a>
                    <a href="#" class="btn mx-1 btn-primary">Comment</a>
                </div>
            </div>
        </div>
    </section>
{{/each}}